@model CategoryDto
<div class="row">
    <h3>Изменение категории</h3>

    <form asp-action="Edit" asp-controller="Category" method="post" class="form-horizontal">
        <input type="hidden" asp-for="Id"  />
        <div class="form-group">
            <label asp-for="CategoryName"></label>
            <div class="col-md-5">
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ShortDesc"></label>
            <div class="col-md-5">
                <input asp-for="ShortDesc" class="form-control" />
                <span asp-validation-for="ShortDesc" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FullDesc"></label>
            <div class="col-md-5">
                <input asp-for="FullDesc" class="form-control" />
                <span asp-validation-for="FullDesc" class="text-danger"></span>
            </div>
        </div>


        <input class="btn btn-success" type="submit" value="Изменить" />
        <a asp-action="Index" asp-controller="Category" class="btn btn-secondary">Отменить</a>
    </form>
</div>



