@model ProductDto
<div class="row">
    <h3>Добавления товара</h3>
    <form asp-action="Create" asp-controller="Product" method="post" class="form-horizontal" asp-antiforgery="true" enctype="multipart/form-data">
        
        <div class="form-group">
            <label asp-for="ProductName">Названия продукта</label>
            <div class="col-md-5">
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ShortDesc">краткое описания</label>
            <div class="col-md-5">
                <input asp-for="ShortDesc" class="form-control" />
                <span asp-validation-for="ShortDesc" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FullDesc">Польное описания</label>
            <div class="col-md-5">
                <input asp-for="FullDesc" class="form-control" />
                <span asp-validation-for="FullDesc" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FurnitureMadeOf">Из чего сделано </label>
            <div class="col-md-5">
                <input  asp-for="FurnitureMadeOf" class="form-control" />
                <span asp-validation-for="FurnitureMadeOf" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Manafacturer">Производитель</label>
            <div class="col-md-5">
                <input asp-for="Manafacturer" class="form-control" />
                <span asp-validation-for="Manafacturer" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Quantity">Количество</label>
            <div class="col-md-5">
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Price">Цена</label>
            <div class="col-md-5">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AvailableProduct">Продукт доступен ?</label>
            <div class="col-md-5">
                <input type="text" asp-for="AvailableProduct" class="form-control" />
                <span asp-validation-for="AvailableProduct" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="date">Дата производства</label>
            <div class="col-md-5">
                <input type="datetime"  asp-for="date" class="form-control" />
                <span asp-validation-for="date" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Img">Фото продукта</label>
            <div class="col-md-5">
                <input type="file" asp-for="Img" class="image" accept="image/*" alt="This is Image file " />
                <span asp-validation-for="Img" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId"><b>Категория</b></label>
            <select class="form-control" name="CategoryId">
                @foreach (var x in ViewBag.Categories)
                {
                    <option value="@x.Id">
                        @x.CategoryName
                    </option>
                }
            </select>
            <span asp-validation-for="CategoryId"></span>
        </div>

        <input class="btn btn-success" type="submit" value="Добавить" />
        <a asp-action="Index" asp-controller="Product" class="btn btn-secondary">Отменить</a>
    </form>
</div>

